{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "types": ["primer", "prop-types"],
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
